<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/txtorecio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/imageView_carrito"
            android:layout_width="111dp"
            android:layout_height="129dp"
            android:layout_below="@+id/t"
            android:layout_marginTop="-6dp"
            android:src="@color/black" />

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/txt_nombre_cesta"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:shadowColor="@color/black"
                android:text="TextView"
                android:textColor="@color/black" />

            <TextView
                android:id="@+id/txt_precio_cesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <Button
                android:id="@+id/button_quitar_carrito"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:text="QUITAR" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_cantidad_cesta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />

            <TextView
                android:id="@+id/txt_cantidad_importe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>