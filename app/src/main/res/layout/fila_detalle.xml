<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <ImageView
        android:id="@+id/imagen_detalle"
        android:layout_width="139dp"
        android:layout_height="97dp"
        android:layout_marginTop="-6dp"
        android:src="@color/black" />

    <TextView
        android:id="@+id/txt_nombre_detalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagen_detalle"
        android:layout_marginStart="14dp"
        android:layout_marginTop="-89dp"
        android:layout_toEndOf="@+id/imagen_detalle"
        android:text="nombre" />

    <TextView
        android:id="@+id/txt_precio_detalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_nombre_detalle"
        android:layout_marginStart="7dp"
        android:layout_marginTop="28dp"
        android:layout_toEndOf="@+id/imagen_detalle"
        android:text="Precio" />

    <TextView
        android:id="@+id/txt_cantidad_detalle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imagen_detalle"
        android:layout_marginStart="81dp"
        android:layout_marginTop="-39dp"
        android:layout_toEndOf="@+id/txt_precio_detalle"
        android:text="cantidad" />

</RelativeLayout>